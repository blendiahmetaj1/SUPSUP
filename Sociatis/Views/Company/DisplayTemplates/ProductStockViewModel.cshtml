@model Sociatis.Models.Products.ProductStockViewModel

<div class="productRequirement">
    <div class="productRequirementImage">

            <span 
                  @if(Model.ShowQuantity == false)
                  {
                      @:style="visibility:hidden"
                  }
                  class="productRequirementCurrentAmount text-center">
                @Model.Amount
            </span>
        
        <div class="productRequirementImageCenter centerHorizontalFlex">
            @Html.DisplayFor(m => m.Image)
        </div>
        
        
            <div class="equipmentQuality"
                 @if (Model.ShowQuality == false)
                 {
                     @:style="visibility:hidden"
                 }
                 >
                @for (int i = 0; i < Model.Quality; ++i)
                {
                    <i class="fa fa-star"></i>
                }
            </div>
       
    </div>
</div>