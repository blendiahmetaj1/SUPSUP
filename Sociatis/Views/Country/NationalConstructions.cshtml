@model Sociatis.Models.Constructions.NationalConstructionsViewModel
@using Entities.enums;
@{
    ViewBag.Title = Model.Info.CountryName + "'s constructions";
}
@Html.DisplayFor(m => m.Info, "~/Views/Country/DisplayTemplates/CountryInfoViewModel.cshtml")

<div class="contentBo">
    <h4>Undergoing constructions</h4>
    <div class="row small-up-1 medium-up-2 large-up-2">
        @foreach (var construction in Model.Constructions)
        {
            <div class="column column-block">
                <div class="nationalConstruction">
                    <div class="row collapse" data-equalizer>
                        <div class="small-12 medium-2 large-3 columns centerVerticalFlex centerHorizontalFlex" data-equalizer-watch>
                            <a href="@Url.Action("View", "Company", new { companyID = construction.ConstructionID })">
                                @Html.Partial("~/Views/Shared/DisplayTemplates/SmallEntityAvatarViewModel.cshtml", construction.Avatar)
                            </a>
                        </div>
                        <div class="small-12 medium-10 large-9 columns" data-equalizer-watch>
                            <div class="constructionInformations">
                                <div>
                                    @Html.ActionLink(construction.Avatar.Name, "View", "Entity", new { entityID = construction.ConstructionID}, null)
                                </div>
                                <div>
                                    Quality: <span class="qualityStars">
                                        @for(int i = 0;i <  construction.Quality; ++i)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                    </span>
                                </div>
                                <div>
                                    Region: @Html.ActionLink(construction.RegionName, "View", "Region", new { regionID = construction.RegionID })
                                </div>
                                <div>
                                    Building progress: <span class="constructionProgress">@construction.Progress%</span>.
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>