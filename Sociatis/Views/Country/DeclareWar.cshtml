            @Html.DropDownListFor(m => m.SelectedCountryID, Model.NeighboursCountries)
        </div>
        <div class="small-4 columns">
            <button class="button red">Declare war!</button>
        </div>
    </div>
    }

    <h4>War declaration informations :</h4>
