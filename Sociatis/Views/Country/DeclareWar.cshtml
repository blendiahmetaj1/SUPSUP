@model Sociatis.Models.Country.DeclareWarViewModel

@{
 
}

@Html.DisplayFor(m => m.Info)

<div class="ContentBox row">
    <h3>Declare war</h3>
    @using (Html.BeginForm(RouteDataHelper.ActionName, RouteDataHelper.ControllerName, FormMethod.Post,

        new Dictionary<string, object>() { { "vm.AttackerCountryID", Model.AttackerCountryID.ToString() } }))
    {
        @Html.HiddenFor(m => m.AttackerCountryID)
    <div class="row">
        <div class="small-4 columns">
            Countries :
        </div>
