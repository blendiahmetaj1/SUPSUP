@model Sociatis.Models.Congress.Votings.ViewChangeGreetingMessageViewModel
@using HeyRed.MarkdownSharp;

@{
    Markdown mark = new Markdown();
}

<h4>Proposition #@Model.VotingID : Change greeting message to:</h4>
<div id="articleContent" class="articleContent">
    @Html.Raw(mark.Transform(Model.GreetingMessage))
</div>
by @Html.ActionLink(Model.CreatorName, "View", "Citizen", new { citizenID = Model.CreatorID }, null)
