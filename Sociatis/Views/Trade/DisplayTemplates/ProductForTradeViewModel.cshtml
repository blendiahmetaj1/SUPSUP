@model Sociatis.Models.Trades.ProductForTradeViewModel

<div class="column column-block">
    <div class="tradeItem">
        <div class="tradeProductImage">
            @Html.DisplayFor(m => m.Image)
            <div class="quality">
                @for (int i = 0; i < Model.Quality; ++i)
                {
                    <i class="fa fa-star"></i>
                }
            </div>
        </div>
        <div class="tradeWhat">
            @Model.Amount @Model.Name
        </div>
        @if (Model.CanRemove)
        {
        <div class="deleteRow">
            @using (Html.BeginForm("RemoveProduct", RouteDataHelper.ControllerName, new { tradeID = Model.TradeID, productID = Model.ProductID, quality = Model.Quality, entityID = Model.EntityID }))
            {
            <button type="submit" class="button red highlight eqButton noMargin">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </button>
            }
        </div>
        }
    </div>
</div>